<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SearchImage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
    </style>

    <style name="Theme.SearchImage" parent="Base.Theme.SearchImage" />

    <style name="customTextViewFontStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pretendard</item>
    </style>
    <style name="customButtonFontStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/pretendard</item>
    </style>
    <style name="customEditTextFontStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/pretendard</item>
    </style>

    <style name="selectedTabTextStyle">
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>
    <style name="defaultTabTextStyle">
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>
</resources>