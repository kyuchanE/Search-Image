<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isFirstItem"
            type="Boolean" />

        <variable
            name="isTypeImage"
            type="Boolean" />

        <variable
            name="strCategory"
            type="String" />

        <variable
            name="strUrl"
            type="String" />

        <variable
            name="strDateTime"
            type="String" />

        <variable
            name="strTitle"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- START Search View -->
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="14dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_round_14_f7f7f7"
            isVisible="@{isFirstItem}"
            tools:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_search"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="8sp"
                android:layout_marginStart="8dp"
                android:text="@string/feature_main_search_hint"
                searchHintStr="@string/feature_main_search_hint"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_delete"
                android:scaleType="fitXY"/>

        </LinearLayout>
        <!-- End Search View -->

        <!-- START Result Item -->
        <LinearLayout
            android:id="@+id/ll_result_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            isVisible="@{!isFirstItem}"
            tools:visibility="visible">
            <!-- START Result Image -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="90dp"
                android:layout_height="90dp">

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- END Result Image -->
            <!-- START Result Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        isTypeImage="@{isTypeImage}"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:text="@{strTitle}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:textColor="@color/color_465179"
                        android:text="@{strCategory}"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@{strUrl}"
                    android:textSize="13sp"
                    android:textColor="@color/color_444444"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="6sp"
                    android:text="@{strDateTime}"
                    android:textColor="@color/color_888888"
                    android:layout_marginTop="6dp"/>

            </LinearLayout>
            <!-- End Result Info -->
        </LinearLayout>
        <!-- END Result Item -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
